{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": false,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": false,
  },
}